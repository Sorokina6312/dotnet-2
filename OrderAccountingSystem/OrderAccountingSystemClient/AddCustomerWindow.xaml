<Window x:Class="OrderAccountingSystemClient.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderAccountingSystemClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Add Customer" Height="162" Width="242">
    <Grid Margin="0,1,0,-1">
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Height="20" Width="40" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,50,0,0" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top" Height="20" Width="40" FontSize="14"/>
        <TextBox x:Name="NameInput" HorizontalAlignment="Left" Margin="85,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <TextBox x:Name="PhoneInput" HorizontalAlignment="Left" Margin="85,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <Button Content="Ok" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Width="35" Click="Add_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="150,86,0,0" VerticalAlignment="Top" Width="60" Click="Cancel_Click"/>
    </Grid>
</Window>
