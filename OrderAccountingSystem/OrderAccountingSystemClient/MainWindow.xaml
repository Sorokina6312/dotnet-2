<Window x:Class="OrderAccountingSystemClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderAccountingSystemClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddCustomerButton" Grid.Column="1" Content="Add Customer" HorizontalAlignment="Left" Margin="564,72,0,0" VerticalAlignment="Top" Click="Add_Customer_Click" Height="45" Width="120" FontSize="18"/>
        <Button x:Name="AddProductButton" Grid.Column="1" Content="Add Product" HorizontalAlignment="Left" Margin="564,135,0,0" VerticalAlignment="Top" Click="Add_Product_Click" Height="45" Width="120" FontSize="18"/>
    </Grid>
</Window>
